{
  "name": "rst-vscode",
  "displayName": "ReStructured Text Previewer",
  "description": "An extension to preview RST files while typing them",
  "version": "2.0.0",
  "publisher": "tht13",
  "author": "Thomas Haakon Townsend",
  "license": "MIT",
  "readme": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/tht13/RST-vscode"
  },
  "galleryBanner": {
    "color": "#78d6f0",
    "theme": "light"
  },
  "bugs": "https://github.com/tht13/RST-vscode/issues",
  "homepage": "https://github.com/tht13/RST-vscode/blob/master/README.md",
  "icon": "media/icon.png",
  "main": "./out/src/extension",
  "engines": {
    "vscode": "^1.6.0"
  },
  "categories": [
    "Languages",
    "Other"
  ],
  "activationEvents": [
    "onCommand:rst.preview",
    "onCommand:rst.previewToSide",
    "onCommand:rst.source"
  ],
  "contributes": {
    "languages": [
      {
        "id": "rst",
        "aliases": [
          "RST",
          "ReStructured Text"
        ],
        "extensions": [
          ".rst",
          ".rest",
          ".hrst"
        ]
      }
    ],
    "keybindings": [
      {
        "command": "rst.preview",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "!terminalFocus"
      },
      {
        "command": "rst.previewToSide",
        "key": "ctrl+k r",
        "mac": "cmd+k r"
      }
    ],
    "commands": [
      {
        "command": "rst.preview",
        "title": "Open Preview",
        "category": "ReStructured Text",
        "icon": {
          "light": "./media/Preview.svg",
          "dark": "./media/Preview_inverse.svg"
        }
      },
      {
        "command": "rst.previewToSide",
        "title": "Open Preview to the Side",
        "category": "ReStructured Text",
        "icon": {
          "light": "./media/PreviewOnRightPane_16x.svg",
          "dark": "./media/PreviewOnRightPane_16x_dark.svg"
        }
      },
      {
        "command": "rst.source",
        "title": "Show Source",
        "category": "ReStructured Text",
        "icon": {
          "light": "./media/ViewSource.svg",
          "dark": "./media/ViewSource_inverse.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId == rst",
          "command": "rst.preview",
          "alt": "rst.previewToSide",
          "group": "navigation"
        },
        {
          "when": "resourceScheme == rst",
          "command": "rst.source",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "editorLangId == rst",
          "command": "rst.preview",
          "group": "navigation"
        }
      ]
    },
    "grammars": [
      {
        "language": "rst",
        "path": "./syntaxes/restructuredtext.tmlanguage",
        "scopeName": "text.restructuredtext"
      }
    ]
  },
  "scripts": {
    "build": "tsc -p ./",
    "vscode:prepublish": "npm run build",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "preversion": "npm test",
    "version": "changes",
    "postversion": "git push --follow-tags",
    "pretest": "npm run build",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "dependencies": {
    "file-url": "2.0.0",
    "node-uuid": "^1.4.7"
  },
  "devDependencies": {
    "@studio/changes": "^1.0.5",
    "@types/file-url": "^1.0.28",
    "@types/mocha": "^2.2.34",
    "@types/node": "^6.0.52",
    "@types/node-uuid": "0.0.28",
    "mocha": "^3.2.0",
    "typescript": "2.1.4",
    "vscode": "1.0.3"
  }
}
